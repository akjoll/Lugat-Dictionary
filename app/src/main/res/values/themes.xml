<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LugatDictionary.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface
        </item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="dividerColor">@color/colorDivider</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/hintColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomNavigationStyle">
            @style/Widget.MaterialComponents.BottomNavigationView.LugatDictionary
        </item>

        <item name="snackbarStyle">
            @style/Widget.MaterialComponents.Snackbar.LugatDictionary
        </item>

        <item name="bottomSheetDialogTheme">
            @style/ThemeOverlay.MaterialComponents.BottomSheetDialog.LugatDictionary
        </item>
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.FilledBox.LugatDictionary
        </item>
        <item name="textAllCaps">false</item>
        <item name="dialogCornerRadius">@dimen/corner_size_big</item>
        <item name="materialButtonStyle">
            @style/Widget.MaterialComponents.Button.LugatDictionaryButton
        </item>
        <item name="materialButtonOutlinedStyle">
            @style/Widget.MaterialComponents.Button.OutlinedButton.LugatDictionaryOutlinedButton
        </item>

        <item name="textAppearanceHeadline2">
            @style/TextAppearance.MaterialComponents.Headline2.LugatDictionary
        </item>
        <item name="textAppearanceHeadline3">
            @style/TextAppearance.MaterialComponents.Headline3.LugatDictionary
        </item>
        <item name="textAppearanceHeadline4">
            @style/TextAppearance.MaterialComponents.Headline4.LugatDictionary
        </item>
        <item name="textAppearanceHeadline5">
            @style/TextAppearance.MaterialComponents.Headline5.LugatDictionary
        </item>
        <item name="textAppearanceHeadline6">
            @style/TextAppearance.MaterialComponents.Headline6.LugatDictionary
        </item>
        <item name="textAppearanceSubtitle1">
            @style/TextAppearance.MaterialComponents.Subtitle1.LugatDictionary
        </item>
        <item name="textAppearanceSubtitle2">
            @style/TextAppearance.MaterialComponents.Subtitle2.LugatDictionary
        </item>
        <item name="textAppearanceBody1">
            @style/TextAppearance.MaterialComponents.Body1.LugatDictionary
        </item>
        <item name="textAppearanceBody2">
            @style/TextAppearance.MaterialComponents.Body2.LugatDictionary
        </item>
        <item name="textAppearanceCaption">
            @style/TextAppearance.MaterialComponents.Caption.LugatDictionary
        </item>

    </style>

    <style name="ThemeOverlay.MaterialComponents.BottomSheetDialog.LugatDictionary">
        <item name="bottomSheetStyle">
            @style/Widget.MaterialComponents.BottomSheet.LugatDictionary
        </item>
    </style>
</resources>