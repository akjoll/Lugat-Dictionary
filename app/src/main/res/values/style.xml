<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">
            @color/white
        </item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textAppearanceSubtitle1">
            @style/TextAppearance.MaterialComponents.Subtitle1.LugatDictionary
        </item>
    </style>

    <style name="Widget.MaterialComponents.Button.LugatDictionaryButton">
        <item name="cornerRadius">@dimen/corner_size_medium</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="backgroundTint">@color/filled_button_color</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.LugatDictionaryOutlinedButton">
        <item name="cornerRadius">@dimen/corner_size_medium</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox.LugatDictionary">
        <item name="endIconTint">@color/bali_hai</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">
            @dimen/corner_size_small
        </item>
        <item name="boxCornerRadiusTopEnd">
            @dimen/corner_size_small
        </item>
        <item name="boxCornerRadiusBottomStart">
            @dimen/corner_size_small
        </item>
        <item name="boxCornerRadiusBottomEnd">
            @dimen/corner_size_small
        </item>
        <item name="boxBackgroundColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.MaterialComponents.BottomSheet.LugatDictionary">
        <item name="background">@drawable/bottom_sheet_background</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.LugatDictionary
        </item>
    </style>
    <style name="ShapeAppearanceOverlay.LugatDictionary" parent="">
        <item name="cornerSize">@dimen/corner_size_big</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.LugatDictionary">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="Widget.MaterialComponents.Snackbar.LugatDictionary">
        <item name="backgroundTint">@color/ebony_clay</item>
    </style>

    <style name="FullScreenDialog3" parent="Theme.LugatDictionary.Light">
        <item name="background">@android:color/transparent</item>
        <item name="colorPrimary">?colorPrimary</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="colorAccent">?colorAccent</item>
        <item name="colorPrimaryDark">?colorPrimaryDark</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

</resources>