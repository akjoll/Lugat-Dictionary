<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/incl_toolbar"
        layout="@layout/layout_main_toolbar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_widgets"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/words_bg"
        android:layout_marginHorizontal="@dimen/dp_2.5x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incl_toolbar"
        app:layout_constraintBottom_toTopOf="@id/warning_limited_number_word"
        android:layout_marginTop="@dimen/dp_1.5x"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/items_widget"
    />
    <LinearLayout
        android:id="@+id/warning_limited_number_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_widgets"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_1.25x"
        android:layout_marginHorizontal="@dimen/dp_2.5x"
        android:layout_marginEnd="@dimen/dp_2x"
        android:paddingHorizontal="@dimen/dp_2x"
        android:paddingVertical="@dimen/dp_1.25x"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_beruzoviy_small">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/limited_number_word"
            android:textColor="?colorSecondary"
            android:textAppearance="?textAppearanceSubtitle1"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>