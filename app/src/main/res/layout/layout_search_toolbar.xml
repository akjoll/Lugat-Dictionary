<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/search_toolbar_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/search"
        android:layout_marginTop="@dimen/dp_1.5x"
        android:textAppearance="?textAppearanceHeadline2"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_search"
        android:background="@drawable/search_bg"
        android:layout_marginTop="@dimen/dp_3.75x"
        android:layout_marginBottom="@dimen/dp_2.25x"
        android:hint="@string/search"
        android:textAppearance="?textAppearanceBody2"
        android:paddingHorizontal="14dp"
        android:layout_marginHorizontal="@dimen/dp_2.5x"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>