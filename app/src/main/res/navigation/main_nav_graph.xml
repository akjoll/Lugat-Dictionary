<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/search">

    <navigation android:id="@+id/search"
        app:startDestination="@id/searchFragment">

        <fragment android:id="@+id/searchFragment"
            android:name="kg.lugatdictionary.ui.search.SearchFragment"
            tools:layout="@layout/fragment_search"
            android:label="searchFragment"/>

    </navigation>

    <navigation android:id="@+id/favourite"
        app:startDestination="@id/favouriteFragment">

        <fragment android:id="@+id/favouriteFragment"
            android:name="kg.lugatdictionary.ui.favourite.FavouriteFragment"
            tools:layout="@layout/fragment_favourite"
            android:label="favouriteFragment"/>

    </navigation>

    <navigation android:id="@+id/widget"
        app:startDestination="@id/widgetFragment">

        <fragment android:id="@+id/widgetFragment"
            android:name="kg.lugatdictionary.ui.widget.WidgetFragment"
            tools:layout="@layout/fragment_widget"
            android:label="widgetFragment"/>

    </navigation>

    <navigation android:id="@+id/history"
        app:startDestination="@id/historyFragment">

        <fragment android:id="@+id/historyFragment"
            android:name="kg.lugatdictionary.ui.history.HistoryFragment"
            tools:layout="@layout/fragment_history"
            android:label="historyFragment"/>

    </navigation>




</navigation>